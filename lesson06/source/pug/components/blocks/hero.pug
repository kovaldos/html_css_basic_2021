mixin hero ()
	-
		const data = {
			title: "New Automation Tool for Your",
			subtitle: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Faucibus tristique vulputate ultrices ut mauris tellus at. Posuere sollicitudin odio tellus elit.",
			btn: {
				text: "See Our Project",
			}
		}

	section.hero 
		.container.hero__container 
			.hero__wrapper 
				.hero__wrapper-col.hero__wrapper-col--01
					.hero__heading 
						h1.title.title--h1.hero__title=data.title
							span.hero__subtitle=data.subtitle
					+btn(data.btn).btn--pcbl.hero__btn
				.hero__wrapper-col.hero__wrapper-col--02
					.hero__pic 
						+picture("content", "hero-img", "png", "hero picture")
